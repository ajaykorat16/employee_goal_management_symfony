{% extends 'login/layout.html.twig' %}

{% block body%}
  
<form action="{{ path('app_login') }}" method="post">
    <div class="form-group mb-4">
        <i class="fa fa-envelope-square" style="font-size:15px"></i>
        <input type="text" id="email" name="_username" class="form-control">
    </div>
    <div class="form-group mb-4">
        <i class="fa fa-key" style="font-size:15px"></i>
        <div class="input-group">
            <input type="password" id="password" name="_password" class="form-control toggle-password" style="width: 90%">
        </div>
    </div>
    <div class="text-center mt-5 mb-5">
        <button type="submit" class="btn btn-primary login">Login</button>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
</form>
        
{% endblock %}