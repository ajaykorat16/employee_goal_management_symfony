<!DOCTYPE html>
<html lang="en">
    <head>
    {% block head %}
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title> Work Hub </title>

        <link href="{{ asset('css/datatable-styles.css') }}" rel="stylesheet" media="screen">
        <link href="{{ asset('css/font-awesome.min.css')}}" rel="stylesheet" />
        <link href="{{ asset('css/admin.css')}}" rel="stylesheet" />
    {% endblock %}
       
    {% block stylesheets %}
    {% endblock %}
    </head>

   <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark sb-sidenav-dark">
            <!-- Navbar Brand-->
            {# <a href="" class="custom-logo-link transparent-custom-logo w-14" rel="home" itemprop="url" aria-label="Construction Company"> #}
                <span class="work-hub w-14">WORK HUB</span>
            {# </a>     #}
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>

            <ul class="navbar-nav ms-auto me-3 me-lg-4 d-md-inline-block ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="nav-link" href="{{ path('admin_list') }}">
                                    <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                    Employees
                                </a>
                                <a class="nav-link collapsed" href="{{ path('feedback_create')}}" >
                                    <div class="sb-nav-link-icon"><i class="fa-solid fa-user"></i></div>
                                    Feedback
                                </a>
                            {% elseif is_granted('ROLE_EMPLOYEE') %}
                                <a class="nav-link" href="{{ path('goal_list')}}" >
                                    <div class="sb-nav-link-icon"><i class="fa-solid fa-user"></i></div>
                                    Goals
                                </a>
                                <a class="nav-link collapsed" href="{{ path('feedback_list')}}" >
                                    <div class="sb-nav-link-icon"><i class="fa-solid fa-user"></i></div>
                                    Feedback
                                </a>
                                
                            {% endif %}
                        </div>
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <div class="flash-messages">
                    {% for success in app.flashes('success') %}
                        <div class="alert alert-success text-center">
                            {{ success }}
                        </div>
                    {% endfor %}
                    {% for warning in app.flashes('warning') %}
                        <div class="alert alert-danger text-center">
                            {{ warning }}
                        </div>
                    {% endfor %}
                </div>
                <main>
                    <div class="container-fluid px-4">
                        {% block body %}
                        {% endblock %}
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </body>

    <script src="{{ asset('js/jquery3.7.1.js')}}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js')}}"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>
    <script src="{{ asset('js/fontawesome.js') }}"></script>
    <script src="{{ asset('js/header.js') }}"></script>
    <script src="{{ asset('/bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

    {% block javascripts %}
    {% endblock %}
</html>
